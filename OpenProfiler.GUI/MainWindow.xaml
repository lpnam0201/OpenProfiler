<Window x:Class="OpenProfiler.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenProfiler.GUI"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:prism="http://prismlibrary.com"
        mc:Ignorable="d"
        Title="Open Profiler GUI" Height="450" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="7*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"></RowDefinition>
                <RowDefinition Height="20"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button Command="{Binding ClearCommand}" Width="50">Clear</Button>
                <Button Command="{Binding PauseCommand}" Width="50" Visibility="{Binding IsCollecting, Converter={StaticResource BoolToVis}}">Pause</Button>
                <Button Command="{Binding ResumeCommand}" Width="50" Visibility="{Binding IsNotCollecting, Converter={StaticResource BoolToVis}}">Resume</Button>
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition ></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Text="{Binding FilterText}"></TextBox>
                <Button Grid.Column="1" Width="50" Command="{Binding FilterCommand}">Filter</Button>
            </Grid>
            <ListView Grid.Row="2" ItemsSource="{Binding FilteredQueryListItems}"
                      SelectedItem="{Binding SelectedQueryListItem}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding QueryListItemSelectedCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Query" Width="100" DisplayMemberBinding="{Binding Guid}"></GridViewColumn>
                        <GridViewColumn Header="Time" Width="200" DisplayMemberBinding="{Binding Timestamp}"></GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        <TextBox Grid.Column="1" 
                 Text="{Binding QueryDetail.Text}" 
                 TextWrapping="Wrap"
                 IsReadOnly="True"></TextBox>
    </Grid>
</Window>
